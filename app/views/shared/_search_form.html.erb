<%= form_with(url: search_path, method: "get", local: true) do %>
  <div class="field has-addons">
    <div class="control">
      <%= text_field_tag(:keyword, nil, {class: "input", placeholder: "Search Pokemon"})%>
    </div>
    <div class="control">
      <%= submit_tag("Search", class: 'button is-info')%>
    </div>
  </div>
<% end %>