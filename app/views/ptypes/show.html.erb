
<div class="column">
  <div class="card">
    <div class="card-content">
      <p class="title">
        <p class="title"> English Name: <%= @ptype.poke_type %></p>
      </p>
      <footer class="card-footer">
        <p class="card-footer-item"> Chinese: <%= @ptype.chinese %></p>
        <p class="card-footer-item"> Japanese: <%= @ptype.japanese %></p>
      </footer>
    </div>
  </div>
</div>
<div>
  <div class="columns is-multiline">
    <div class="column is-half">
      <div class="card">
        <div class="card-content">
          <p class="title">
            <p class="title"> Moves: </p>
          </p>
          <% @moves = Move.where(ptype_id: @ptype.id) %>
          <% if @moves.empty? %>
            <p> There are no Moves for the type <%= @ptype.poke_type %></p>
          <% else %>
            <% @moves.each do |move| %>
              <p> <%= link_to move.name, move %> </p>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="column is-half">
      <div class="card">
        <div class="card-content">
          <p class="title">
            <p class="title"> Pokemon: </p>
          </p>
          <% @pokeType = Poketype.where(ptype_id: @ptype.id) %>
          <% @pokeType.each do |poke_type| %>
            <% @pokemon = Pokedex.where(id: poke_type.pokedex_id) %>
            <% if @pokemon.empty? %>
              <p> There are no Moves for the type <%= @ptype.poke_type %></p>
            <% else %>
              <% @pokemon.each do |poke| %>
                <p> <%= link_to poke.name, poke %> </p>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

